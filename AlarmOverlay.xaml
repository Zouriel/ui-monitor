<Window x:Class="ui_monitor.AlarmOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border x:Name="GlowBorder"
        BorderBrush="Red"
        BorderThickness="4"
        CornerRadius="6"
        Background="Transparent">
        <Border.Effect>
            <DropShadowEffect x:Name="GlowEffect"
                          Color="Red"
                          ShadowDepth="0"
                          Opacity="1"
                          BlurRadius="20"/>
        </Border.Effect>
    </Border>
</Window>
